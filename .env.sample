# =============================================================================
# Telecalbot Configuration
# =============================================================================

# Telegram Bot Configuration (Required)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Cal.com API Configuration (Required)
# Get your API key from Cal.com account settings
CALCOM_API_KEY=

# Cal.com API version header
# Check Cal.com API docs for the latest version
CAL_API_VERSION=2024-08-13

# Admin Configuration (Required)
# Your Telegram user ID for admin access and approval notifications
ADMIN_TELEGRAM_ID=

# Cal.com Event Configuration (Required)
# Event slug from your Cal.com event URL (e.g., "step" from cal.com/username/step)
CALCOM_EVENT_SLUG=step

# Event Type ID (discovered via Phase 0 research)
# Run research/calcom_api_validator.py to find yours
# Fallback used when duration-specific IDs are not set
CALCOM_EVENT_TYPE_ID=

# Duration-specific Event Type IDs (optional)
# Set these to use different cal.com event types for 30-min and 60-min bookings
# If not set, CALCOM_EVENT_TYPE_ID is used as fallback for both
CALCOM_EVENT_TYPE_ID_30=
CALCOM_EVENT_TYPE_ID_60=

# Database Configuration
# SQLite database file path (default: telecalbot.db)
DATABASE_PATH=telecalbot.db

# Application Settings
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Booking flow timeout in seconds (default: 900 = 15 minutes)
BOOKING_CONVERSATION_TIMEOUT_SECONDS=900

# Claude Code Configuration (Optional)
# Returns to project root after every command
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true
